{% extends 'layouts/layout.html.twig' %}

{% block content %}

    <h2>Lista de Usuários</h2>

    <form action="">
        <input type="text" name="s" class="form-control" placeholder="Buscar Usuário">
    </form><br/>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Nome</td>
                <td>E-mail</td>
                <td>Telefone</td>
                <td></td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td><a href="/editar/{{ user.id }}" class="btn btn-success btn-xs">Editar</a></td>
                <td><a href="/deletar/{{ user.id }}" class="btn btn-danger btn-xs">Apagar</a></td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
            <tr>
                <td>{{ links | raw }}</td>
            </tr>
        </tfoot> 
    </table>
    <p>{{ message('message') | raw }}</p>

{% endblock %}